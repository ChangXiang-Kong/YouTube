<ResourceDictionary xmlns="https://github.com/avaloniaui"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    x:ClassModifier="internal">
  <Design.PreviewWith>
    <Border Padding="0" Width="300" Height="300">
      <ListBox>
        <ListBoxItem>Item 1</ListBoxItem>
        <ListBoxItem>Item 2 long</ListBoxItem>
        <ListBoxItem IsSelected="True">Item 3</ListBoxItem>
        <ListBoxItem IsEnabled="False">Item 4</ListBoxItem>
        <ListBoxItem IsSelected="True" IsEnabled="False">Item 5</ListBoxItem>
      </ListBox>
    </Border>
  </Design.PreviewWith>

  <Thickness x:Key="ListBoxItemPadding">12,9,12,12</Thickness>
  <ControlTheme x:Key="{x:Type ListBoxItem}" TargetType="ListBoxItem">
    <Setter Property="Background" Value="Transparent" />
    <Setter Property="Padding" Value="{DynamicResource ListBoxItemPadding}" />
    <Setter Property="Template">
      <ControlTemplate>
        <ContentPresenter Name="PART_ContentPresenter"
                          Background="{TemplateBinding Background}"
                          BorderBrush="{TemplateBinding BorderBrush}"
                          BorderThickness="{TemplateBinding BorderThickness}"
                          CornerRadius="{TemplateBinding CornerRadius}"
                          ContentTemplate="{TemplateBinding ContentTemplate}"
                          Content="{TemplateBinding Content}"
                          Padding="{TemplateBinding Padding}"
                          VerticalContentAlignment="{TemplateBinding VerticalContentAlignment}"
                          HorizontalContentAlignment="{TemplateBinding HorizontalContentAlignment}" />
        <!-- 
        当 Background="{TemplateBinding Background}" 不生效时，使用如下方式进行绑定
        两者的区别，参考视频：https://www.youtube.com/watch?v=0JA6SMk5ZrE&list=PLrW43fNmjaQWwIdZxjZrx5FSXcNzaucOO&index=13  21:00
         -->
        <!-- Background="{Binding $parent[ListBoxItem].Background}" -->
      </ControlTemplate>
    </Setter>

    <!-- 样式与 ComboBoxItem.axaml 一致 -->
    <Style Selector="^">
      <Setter Property="Foreground" Value="{DynamicResource PrimaryForeground}"></Setter>
    </Style>

    <!--  PointerOver state  -->
    <Style Selector="^:pointerover">
      <Setter Property="Background" Value="{DynamicResource PrimaryHoverBackground}" />
    </Style>

    <!--  Disabled state  -->
    <Style Selector="^:disabled">
      <Setter Property="Background" Value="{DynamicResource ComboBoxItemBackgroundDisabled}" />
      <Setter Property="BorderBrush" Value="{DynamicResource PrimaryHoverBackground}" />
      <Setter Property="Foreground" Value="{DynamicResource PrimaryHoverBackground}" />
    </Style>

    <!--  Pressed state  -->
    <Style Selector="^:pressed">
      <Setter Property="Background" Value="{DynamicResource HoverGradient}" />
      <Setter Property="FontWeight" Value="Bold"></Setter>
    </Style>

    <!--  Selected state  -->
    <Style Selector="^:selected">
      <Setter Property="Background" Value="{DynamicResource ActiveHoverGradient}" />
      
      <!--  Selected Disabled state  -->
      <Style Selector="^:disabled">
        <Setter Property="Foreground" Value="{DynamicResource PrimaryBackground}" />
        <Setter Property="Background" Value="{DynamicResource PrimaryHoverBackground}" />
      </Style>
    </Style>
  </ControlTheme>
</ResourceDictionary>