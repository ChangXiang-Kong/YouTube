<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
  <Design.PreviewWith>
    <Border Width="600" Padding="20" Height="200" Background="{DynamicResource PrimaryBackgroundGradient}">
      <!-- Add Controls for Previewer Here -->
      <StackPanel Spacing="10">
        <ListBox>
          <ListBoxItem>Test 1</ListBoxItem>
          <ListBoxItem>Test 2</ListBoxItem>
          <ListBoxItem>Test 3</ListBoxItem>
        </ListBox>
      </StackPanel>
    </Border>
  </Design.PreviewWith>

  <!-- Add Styles Here -->
  <Style Selector="ListBox">
    <Setter Property="Background" Value="{DynamicResource PrimaryBackgroundGradient}"></Setter>
    <Setter Property="BorderBrush" Value="{DynamicResource DefaultGradient}"></Setter>
    <Setter Property="BorderThickness" Value="{DynamicResource PrimaryBorderThickness_2}"></Setter>
    <Setter Property="Foreground" Value="{DynamicResource PrimaryForeground}"></Setter>
    <Setter Property="CornerRadius" Value="{DynamicResource PrimaryCornerRadius_3}"></Setter>
  </Style>
